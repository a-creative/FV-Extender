{
	"name": "FV Extender Classic",
	"version": "3.1.11",
	"description": "Helps you accept FarmVille requests.",
	"homepage_url" : "http://a-creative.dk/fv-extender-3",
	"background_page": "html/background.html",
	"permissions" : [
		"tabs",
		"http://api.twitter.com/*",
		"http://www.facebook.com/plugins/serverfbml.php",
		"https://www.facebook.com/plugins/serverfbml.php",
		"http://apps.facebook.com/onthefarm*"
	],
	"options_page" : "html/settings.html",
	"content_scripts": [
		{
			"matches" : [
				"https://www.facebook.com/dialog/apprequests*",
				"http://www.facebook.com/dialog/apprequests*"				
			],
			"js": [
				"js/jquery-1.7.min.js",
				"js/detect_changes.js",
				"js/content_send_request.js"						
			],
			"run_at": "document_start",
			"all_frames" : true		
		},
		{
			"matches" : [
				"https://www.facebook.com/plugins/serverfbml.php*",
				"http://www.facebook.com/plugins/serverfbml.php*"				
			],
			"js": [
				"js/content_min.js"						
			],
			"run_at": "document_start",
			"all_frames" : true	
		},
		{
			"matches": [
			  "http://www.facebook.com/games",
			  "https://www.facebook.com/games"
			],
			"js": [
				"js/jquery-1.7.min.js",
				"js/detect_changes.js",
				"js/ui_events.js",
				"js/content_accept_all.js"
			],
			"css": [
				"css/global.css",
				"css/accept_all.css"
			],
			"run_at": "document_start"
		}, {
			"matches" : [
				"http://fv-zprod.farmville.com/?fb_source=request&request_ids=*",
				"https://fv-zprod.farmville.com/?fb_source=request&request_ids=*",
				"http://apps.facebook.com/onthefarm/",
				"https://apps.facebook.com/onthefarm/",
				"http://apps.facebook.com/onthefarm/index.php*",
				"https://apps.facebook.com/onthefarm/index.php*"
			],
			"js": [
				"js/jquery-1.7.min.js",
				"js/detect_changes.js",
				"js/content_app_request.js"						
			],
			"run_at": "document_start",
			"all_frames" : true
		}
	],
	"browser_action": {
		"default_icon"	: "graphics/chrome_16.jpg", 
		"default_title"	: "FV Extender Classic - Requests",
		"default_popup": "html/menu.html"
	},
	"icons": {
		"16" : "graphics/chrome_16.jpg",
		"32" : "graphics/chrome_32.jpg",
		"48" : "graphics/chrome_48.jpg",
		"128" : "graphics/chrome_128.jpg"
		
	}
}